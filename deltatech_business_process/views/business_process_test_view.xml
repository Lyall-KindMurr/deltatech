<?xml version="1.0" ?>
<odoo>
    <record id="view_business_process_test_tree" model="ir.ui.view">
        <field name="name">Process test</field>
        <field name="model">business.process.test</field>
        <field name="arch" type="xml">
            <tree string="Business Process Test" sample="1">
                <field name="name" />
                <field name="process_id" />
                <field name="tester_id" />
                <field name="date_start" optional="show" />
                <field name="date_end" optional="show" />
                <field name="state" widget="badge" decoration-success="state == 'production'  " />
                <field name="scope" />
            </tree>
        </field>
    </record>
    <record id="view_business_process_test_form" model="ir.ui.view">
        <field name="name">Process test</field>
        <field name="model">business.process.test</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field
                        name="state"
                        widget="statusbar"
                        class="oe_edit_only"
                        options="{'clickable': '1'}"
                        statusbar_visible="draft,run,done"
                    />

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="attachment_tree_view" type="object" icon="fa-file-text-o">
                            <field string="Documents" name="doc_count" widget="statinfo" />
                        </button>
                    </div>


                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" class="oe_inline" />
                        </h1>
                    </div>
                    <group>
                        <group string="Process">
                            <field name="process_id" />
                            <field name="tester_id" />
                        </group>
                        <group string="Date">
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Process steps" name="steps">
                            <field name="test_step_ids" widget="section_and_note_one2many" mode="tree,kanban">
                                <tree
                                    string="Process steps"
                                    editable="bottom"
                                    decoration-danger="result == 'failed'"
                                    decoration-success="result == 'passed'"
                                >
                                    <field name="sequence" widget="handle" />
                                    <field name="step_id" invisible="1" />
                                    <field name="name" />
                                    <field name="transaction_id" />
                                    <field name="description" optional="hide" />
                                    <field name="data_used" />
                                    <field name="data_result" />
                                    <field name="responsible_id" />
                                    <field name="date_start" optional="show" />
                                    <field name="date_end" optional="show" />
                                    <field name="result" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="action_business_process_test" model="ir.actions.act_window">
        <field name="name">Process test</field>
        <field name="res_model">business.process.test</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        name="Process test"
        id="menu_business_process_test"
        action="action_business_process_test"
        sequence="50"
        parent="menu_business_process_main"
    />


    <record id="view_business_process_step_test_tree" model="ir.ui.view">
        <field name="name">Process step test</field>
        <field name="model">business.process.step.test</field>
        <field name="arch" type="xml">
            <tree
                string="Process steps"
                sample="1"
                decoration-danger="result == 'failed'"
                decoration-success="result == 'passed'"
            >
                <field name="sequence" widget="handle" />
                <field name="step_id" invisible="1" />
                <field name="name" />
                <field name="transaction_id" />
                <field name="description" optional="hide" />
                <field name="data_used" />
                <field name="data_result" />
                <field name="responsible_id" optional="show" />
                <field name="date_start" optional="show" />
                <field name="date_end" optional="show" />
                <field name="result" widget="badge" />
            </tree>
        </field>
    </record>

    <record id="view_business_process_step_test_from" model="ir.ui.view">
        <field name="name">Process step test</field>
        <field name="model">business.process.step.test</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" class="oe_inline" />
                        </h1>
                    </div>

                    <group>
                        <group string="Identification">
                            <field name="process_test_id" />
                            <field name="step_id" />
                             <field name="result" widget="badge" />
                        </group>
                        <group string="Responsible">
                            <field name="responsible_id" />
                        </group>
                        <group string="Transaction">
                            <field name="transaction_id" />
                        </group>
                        <group string="Date">
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                        <group string="Data">
                            <field name="data_used" />
                            <field name="data_result" />
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <record id="action_business_process_step_test" model="ir.actions.act_window">
        <field name="name">Process step test</field>
        <field name="res_model">business.process.step.test</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        name="Process step test"
        id="menu_business_process_step_test"
        action="action_business_process_step_test"
        sequence="55"
        parent="menu_report"
    />
</odoo>
