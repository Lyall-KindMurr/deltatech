<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_vendor_product_import_form" model="ir.ui.view">
        <field name="name">Import product</field>
        <field name="model">vendor.product.import</field>
        <field name="arch" type="xml">
            <form string="Import Stock Balance">
                <group>
                    <group>
                        <field name="fields_list" />
                        <field name="supplier_id" />
                    </group>
                    <group>
                        <field name="data_file" filename="filename" />
                        <field name="filename" invisible="1" />
                    </group>
                </group>
                <footer>
                    <button name="do_import" string="_Apply" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
     <record id="action_vendor_product_import" model="ir.actions.act_window">
            <field name="name">Import product</field>
            <field name="res_model">vendor.product.import</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

</odoo>
